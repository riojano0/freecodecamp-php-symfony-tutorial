{% extends 'base.html.twig' %}

{% block title %}List of all posts!{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <a href="{{ path('post.create') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Create post</a>
    <table class="table table-striped">
        <thread>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Actions</td>
            </tr>
        </thread>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>
                    <a href="{{ path('post.show', {id: post.id}) }}">
                        {{ post.title }}
                    </a>
                </td>
                <td>
                    <a class="text-danger" href="{{ path('post.delete', {id: post.id}) }}">
                        Delete
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
